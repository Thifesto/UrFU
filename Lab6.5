package com.company;

public class t5 {

    static void kv (int i) {
        int sum = 0;
        for (int j=1; j<i+1; j++)
        sum = sum + (j*j);
        System.out.println("Summa kvadratov= " + sum);

    }

    int kvrec (int i) {
        int sum;

        if (i == 1) return 1;
        sum = kvrec(i - 1)+ (i*i);
        return sum;
    }

}

public class main {

    public static void main(String[] args) {
t5 p1 = new t5();
p1.kv(6);

int p2 = p1.kvrec(6);
System.out.println("Summa kvadratov= " + p2);

      }
}
