ackage com.company;

import java.util.Scanner;

public class z2 {

    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        System.out.println("Введите число");
        int a = in.nextInt();
        if (a % 5 == 2 && a % 7 == 1)
            System.out.println("Остаток числа при делении на 5 = 2, а при делении на 7 = 1");
        else
            System.out.println("Остаток числа при делении на 5 не равен 2 или при делении на 7 не равен 1");
    }
}
