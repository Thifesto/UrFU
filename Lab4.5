package com.company;

import java.util.Random;
import java.util.Scanner;

public class l45 {
    public static void main(String[] args) {
        Scanner id = new Scanner(System.in);
        System.out.println("Введите число строк массива");
        int Size = id.nextInt();
        System.out.println("Введите число столбцов массива");
        int Size2 = id.nextInt();
        int[][] pryam = new int[Size][Size2];
        Random random = new Random();
        System.out.println("Исходный массив:");
        for (int i = 0; i < Size; i++) {
            for (int j = 0; j < Size2; j++) {
                pryam[i][j] = random.nextInt(9);
                System.out.print(pryam[i][j]);
            }
            System.out.println();
        }
        System.out.println("Транспонированный массив:");
        int[][] n1 = new int[pryam[0].length][pryam.length];
        for (int i = 0; i < pryam[0].length; i++) {
            for (int j = 0; j < pryam.length; j++) {
                n1[i][j] = pryam[j][i];
                System.out.print(n1[i][j]);
            }
            System.out.println();
        }
    }
}
