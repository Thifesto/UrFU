package com.company;
import java.util.Scanner;
public class z10 {
    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        System.out.println("Введите число");

        int b =in.nextInt();
        String hexstr = Integer.toString(b, 8);
        int [] mas = new int[hexstr.length()];
        for (int i = 0; i < hexstr.length(); i++)
        {
            mas[i] = hexstr.charAt(i) - '0';
        }
        int x = hexstr.length() - 2;
        System.out.printf("Второе число справа в 8-ной системе счисления введенного числа = %d", mas[x]);
    }

}
