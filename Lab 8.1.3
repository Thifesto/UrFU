package company.com;

public class Main {
    private static int step=0;
    private static void rec(int x) {
        space();
        System.out.println(""+x+"-> ");
        step++;
        if ((2*x+1) < 20) {
            rec (2*x+1);
           }
        step--;
        space();
        System.out.println(""+x+ " <-");
    }

    public static void space() {
        for (int i = 0; i < step; i++) {
            System.out.print(" ");
        }
    }


            public static void main(String[] args) {
        rec(1);
    }

}
