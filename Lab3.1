package com.company;

import java.util.Scanner;

public class l31 {
    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        System.out.println("Введите число дня недели");
        int a = in.nextInt();
       switch (a) {
           case 1:
               System.out.println("Это понедельник");
               break;
           case 2:
               System.out.println("Это вторник");
               break;
           case 3:
               System.out.println("Это среда");
               break;
           case 4:
               System.out.println("Это четверг");
               break;
           case 5:
               System.out.println("Это пятница");
               break;
           case 6:
               System.out.println("Это суббота");
               break;
           case 7:
               System.out.println("Это воскресенье");
               break;
           default:
               System.out.println("Существует всего 7 дней недели");
       }

    }


}
